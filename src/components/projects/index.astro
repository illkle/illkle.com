---
import CardMini from "@components/projects/card-mini.astro";
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";

const projects = await getCollection("projects");

const sorted = projects.sort(
  (a, b) => (b.data.position ?? 0) - (a.data.position ?? 0),
);
---

<div class="grid grid-cols-1 gap-x-8 gap-y-4 lg:grid-cols-2">
  <div class="lg:col-span-2">
    <ul class="mt-8 grid w-full grid-cols-2 gap-x-2 gap-y-4 md:grid-cols-4">
      {sorted.map((project) => <CardMini project={project} />)}
    </ul>
  </div>
</div>
